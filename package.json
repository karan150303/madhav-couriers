{
  "name": "madhav-couriers",
  "version": "1.0.0",
  "description": "Madhav Couriers and Logistics Website",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development nodemon --watch . --ext js,html,css --exec node server.js",
    "clean-install": "rm -rf node_modules package-lock.json && npm install",
    "test": "NODE_ENV=test jest --watchAll --detectOpenHandles --runInBand",
    "lint": "eslint .",
    "db:health": "node -e \"require('./config/db.config').checkHealth().then(console.log).catch(console.error)\"",
    "db:migrate": "node scripts/migrate.js",
    "security-check": "npm audit --production --audit-level=moderate"
  },
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csrf-csrf": "^2.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.2.0",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.3",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.2",
    "validator": "^13.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.0.0",
    "eslint-plugin-security": "^1.7.1",
    "mongodb-memory-server": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/config/",
      "/tests/"
    ],
    "setupFilesAfterEnv": ["./tests/setup.js"]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "no-console": "off",
      "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
    }
  }
}
